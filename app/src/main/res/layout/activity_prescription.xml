<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:accessibilityPaneTitle="Sign Up"
    android:background="#123456">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--android:background="@mipmap/back_login"-->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#99B3CC"
                android:layout_weight="8"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/bubble"

                    android:hint="Patient"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:textColor="#99B3CC"
                    android:textColorHint="#99B3CC" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/bt_patientStart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_black_24dp"
                android:text="start" />
            <ImageButton
                android:id="@+id/bt_patientStop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_off_black_24dp"
                android:text="start" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#99B3CC"
                android:layout_weight="8"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/bubble"
                    android:hint="Symptoms"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:textColor="#99B3CC"
                    android:textColorHint="#99B3CC" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/bt_symptomsStart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_black_24dp"
                android:text="start" />
            <ImageButton
                android:id="@+id/bt_symptomsStop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_off_black_24dp"
                android:text="start" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#99B3CC"
                android:layout_weight="8"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/bubble"
                    android:hint="Diagnosis"
                    android:padding="15dp"
                    android:inputType="textMultiLine"
                    android:textColor="#99B3CC"
                    android:textColorHint="#99B3CC" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageButton
                android:id="@+id/bt_diagnosisStart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_black_24dp"
                android:text="start" />
            <ImageButton
                android:id="@+id/bt_diagnosisStop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/space_transparent"
                android:padding="7dp"
                android:src="@drawable/ic_mic_off_black_24dp"
                android:text="start" />
        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC"
            android:layout_weight="8"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Medicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/bubble"
                android:hint="Medicines"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="#99B3CC"
                android:textColorHint="#99B3CC" />
        </com.google.android.material.textfield.TextInputLayout>


        <ImageButton
            android:id="@+id/bt_medicinesStart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/space_transparent"
            android:padding="7dp"
            android:src="@drawable/ic_mic_black_24dp"
            android:text="start" />
        <ImageButton
            android:id="@+id/bt_medicinesStop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/space_transparent"
            android:padding="7dp"
            android:src="@drawable/ic_mic_off_black_24dp"
            android:text="start" />
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#99B3CC"
            android:layout_weight="8"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/bubble"
                android:hint="Advices"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="#99B3CC"
                android:textColorHint="#99B3CC" />
        </com.google.android.material.textfield.TextInputLayout>


        <ImageButton
            android:id="@+id/bt_adviceStart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/space_transparent"
            android:padding="7dp"
            android:src="@drawable/ic_mic_black_24dp"
            android:text="start" />
        <ImageButton
            android:id="@+id/bt_adviceStop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/space_transparent"
            android:padding="7dp"
            android:src="@drawable/ic_mic_off_black_24dp"
            android:text="start" />
    </LinearLayout>



        <Button
            android:id="@+id/bt_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_xml_btn_yellow"
            android:text="Send Mail"
            android:textColor="#99B3CC"


            />

        <Button
            android:id="@+id/bt_pdfGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_xml_btn_yellow"
            android:text="Generate Pdf"
            android:textColor="#99B3CC"


            />


    </LinearLayout>
</ScrollView>






